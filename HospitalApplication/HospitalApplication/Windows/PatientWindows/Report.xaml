<Window x:Class="HospitalApplication.Windows.PatientWindows.Report"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalApplication.Windows.PatientWindows"
        mc:Ignorable="d"
        Title="Report" Height="450" Width="500"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource WindowStyle}">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Select range of dates."/>
            <DatePicker Margin="0 10"  Name="FirstDate"/>
            <DatePicker Margin="0 10"  Name="SecondDate"/>
            <Button Margin="0 0 10 0" Content="Generate Report" x:Name="GenerateReport" Click="GenerateReport_Click" Width="150"/>
        </StackPanel>
    </Grid>
</Window>
